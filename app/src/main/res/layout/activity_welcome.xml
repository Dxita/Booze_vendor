<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.WelcomeActivity">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <ImageView
            android:visibility="gone"
            android:padding="10dp"
            android:layout_gravity="left"
            android:id="@+id/backspace"

            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>
    </LinearLayout>

    <TextView
        android:fontFamily="@font/calibri"
        android:padding="10dp"
        android:text="Welcome!"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:fontFamily="@font/calibri"
        android:text="Sign or create new account"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="08dp"
        android:layout_height="wrap_content"></TextView>


    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/newlogo"
        android:layout_width="140dp"
        android:layout_height="140dp"></ImageView>



    <Button
        android:id="@+id/signin"
        android:text="Go to Sign in"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="@font/calibri"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonbg"
        android:layout_width="match_parent"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_height="wrap_content"></Button>

    <Button
        android:text="No account yet? Sign up"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:id="@+id/signup"

        android:fontFamily="@font/calibri"
        android:background="@drawable/buttonstroke"
        android:layout_width="match_parent"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_height="wrap_content"></Button>
</LinearLayout>