<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccount.ProfileActivity">

    <LinearLayout
        android:id="@+id/topview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:textAllCaps="true"
            android:gravity="center"
            android:fontFamily="@font/calibri"
            android:layout_weight="1"
            android:id="@+id/addressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="User Account"/>








    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardMaxElevation="10dp"
                card_view:cardElevation="0dp"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/im"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/p"
                                android:visibility="gone"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_centerInParent="true"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_below="@+id/im"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/calibri"
                                android:text="name"
                                android:id="@+id/profilename"
                                android:layout_width="match_parent"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:text="mobile"
                                android:fontFamily="@font/calibri"

                                android:textColor="@color/black"
                                android:id="@+id/mobileno"
                                android:layout_width="match_parent"
                                android:textSize="16dp"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </RelativeLayout>
                    <!--  <View
                          android:id="@+id/v"
                          android:layout_marginTop="10dp"
                          android:layout_below="@+id/r1"
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/colorPrimary"/>-->

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:visibility="gone"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="0dp"
                card_view:cardMaxElevation="10dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Wallet"
                            android:textSize="16dp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <View
                        android:id="@+id/v3"
                        android:layout_below="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorAccent"/>

                    <LinearLayout
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Balance - "
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/viewWallet"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/black"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referral Code - "
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/referralcode"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="0dp"
                card_view:cardMaxElevation="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:fontFamily="@font/calibri"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Orders"
                            android:textSize="16dp"
                            android:textColor="@color/colorAccent"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/v2"
                        android:layout_below="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorAccent"/>

                    <TextView
                        android:fontFamily="@font/calibri"
                        android:id="@+id/viewallOrders"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All Orders"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_gravity="right"
                        android:textColor="@color/golden"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/c4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="0dp"
                card_view:cardMaxElevation="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/calibri"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="16dp"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                    <View
                        android:id="@+id/v4"
                        android:layout_below="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorAccent"/>

                    <TextView
                        android:fontFamily="@font/calibri"
                        android:id="@+id/editProfile"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_gravity="right"
                        android:textColor="@color/golden" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/c7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="0dp"
                card_view:cardMaxElevation="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/calibri"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help &amp; Support"
                            android:textSize="16dp"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                    <View
                        android:id="@+id/v7"
                        android:layout_below="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorAccent"/>

                    <TextView
                        android:fontFamily="@font/calibri"
                        android:id="@+id/supportTxt"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request for support"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_gravity="right"
                        android:textColor="@color/golden" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView

                android:layout_marginTop="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/c5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="0dp"
                card_view:cardMaxElevation="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/calibri"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textSize="16dp"
                            android:drawableRight="@drawable/ic_power_settings_new_black_24dp"
                            android:textColor="@color/colorAccent"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/c6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="0dp"
                card_view:cardMaxElevation="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/calibri"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INVITE A FRIEND"
                            android:textSize="16dp"
                            android:drawableRight="@drawable/ic_share_black_24dp"
                            android:textColor="@color/colorAccent"
                            />

                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>